[settings]
ENV=development
DEBUG=True

# Database
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=

# Redis
REDIS_HOST=
REDIS_PORT=

# Auth
SECRET_KEY=
SESSION_COOKIE_NAME=

# App
BIND=

# Logging
LOG_DIR=
LOG_LEVEL=

# API Docs
API_TITLE=Markt API
API_VERSION=v1
OPENAPI_VERSION=3.0.3
OPENAPI_URL_PREFIX=/
OPENAPI_SWAGGER_UI_PATH=/swagger-ui
OPENAPI_SWAGGER_UI_URL=https://cdn.jsdelivr.net/npm/swagger-ui-dist/

# CORS / Cookies
ALLOWED_ORIGINS=http://localhost:3000,https://test.marktcommerce.com

# Cookie settings (set these for HTTPS cross-site in production)
# For cross-site cookies over HTTPS, set SAMESITE=None and SECURE=True
SESSION_COOKIE_SAMESITE=
SESSION_COOKIE_SECURE=
REMEMBER_COOKIE_SAMESITE=
REMEMBER_COOKIE_SECURE=

# Paystack Configuration
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYMENT_CURRENCY=NGN
PAYMENT_GATEWAY=paystack

# AWS Configuration
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_SECRET_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=markt-media
CDN_DOMAIN=cdn.yourdomain.com
